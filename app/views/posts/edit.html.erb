<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header header2">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <div class="post-heading">
                       <h1><%= @post.title %></h1>
                       <!-- <h2 class="subheading">Problems look mighty small from 150 miles up</h2> -->
                       <span class="meta">
                         <!-- <%= link_to("New Posts",  new_post_path  )%> | -->
                         <!-- <%= link_to("List Posts", posts_path )%> | -->
                         <%= link_to "Back", post_path(@post) %> |
                         <!-- <%= link_to "Edit", edit_post_path(@post) %> | -->
                         <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>
                       </span>
              </div>
            </div>
        </div>
    </div>
</header>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
              <%= render "form" %>
            </div>
        </div>
    </div>
</article>
